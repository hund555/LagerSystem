@page "/EditItem/{ItemId:int}"

@inject NavigationManager navigation

@inject ServiceLayer.ILagerService _lagerService

<h3>EditItem</h3>

<EditForm Model="@Item" OnValidSubmit="UpdateItem">
    <DataAnnotationsValidator/>
    <input type="hidden" @bind="@Item.ItemId" />
    <div class="form-group">
        <label >Genstands navn</label>
        <input class="form-control" @bind="@Item.ItemName" />
        <ValidationMessage For="() => Item.ItemName" />
    </div>
    <div class="form-group">
        <label>Beskrivelse</label>
        <input class="form-control" @bind="@Item.Discription" />
    </div>
    <input class="btn btn-primary" type="submit" value="Gem"/>
</EditForm>

@code {
    [Parameter]
    public int ItemId { get; set; }

    private DataLayer.Entities.Item Item { get; set; }

    protected override void OnInitialized()
    {
        Item = _lagerService.GetItemById(ItemId);
    }

    private async Task UpdateItem()
    {
        await _lagerService.UpdateItem(Item);

        navigation.NavigateTo("/LagerListe");
    }
}
